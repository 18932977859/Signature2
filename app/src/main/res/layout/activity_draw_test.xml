<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    tools:context=".DrawTestActivity">

    <com.example.signature.MyDrawView
        android:id="@+id/myDrawView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxWidth="@android:dimen/thumbnail_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        customview:textColor="#00FFFF"
        customview:yaoHeight="20dp"
        customview:yaoWidth="200dp"></com.example.signature.MyDrawView>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="92dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myDrawView" />
</androidx.constraintlayout.widget.ConstraintLayout>